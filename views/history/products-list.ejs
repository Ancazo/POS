<%- include('../partials/head') %>

<body>

    <div class="container">
        <table class="table table-striped">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Created On</th>
                <th>Updated On</th>
            </tr>
            <tr>
                <% if (products.length !== 0) { %> 
                    <% products.forEach((element) => { %>
                <th><a href="/products/<%= element._id %> "> <%= element._id %></a></th>
                <th><%= element.name %></th>
                <th><%= element.price %></th>
                <th><%= element.createdAt.toDateString() %></th>
                <th><%= element.updatedAt.toDateString() %></th>
            </tr>
            <% }); %>
            <% } else { %>
                <p>No Products List</p>
                <% } %>
        </table>

        <form method="GET" action="/sales">
            <button type="submit" class=" form-control btn-secondary">Back</a>
        </form>

    </div>
</body>
